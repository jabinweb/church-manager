# Database
DATABASE_URL="postgresql://username:password@localhost:5432/church_management"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Church Management <your-email@gmail.com>"

# Razorpay Configuration
RAZORPAY_ENV=test
RAZORPAY_TEST_KEY_ID=rzp_test_your_test_key_id
RAZORPAY_TEST_KEY_SECRET=your_test_key_secret
RAZORPAY_LIVE_KEY_ID=rzp_live_your_live_key_id
RAZORPAY_LIVE_KEY_SECRET=your_live_key_secret

# Public Razorpay Key (for frontend)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_test_key_id
SMTP_PASSWORD="your-app-password"
SMTP_FROM=your-email@gmail.com
